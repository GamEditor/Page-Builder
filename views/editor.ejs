<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه ساز - ویرایشگر</title>

    <%-global_header%>
        <link rel="stylesheet" href="/styles/components.css">
        <link rel="stylesheet" href="/styles/editor.css">

        <script src="/scripts/components.js"></script>
        <script src="/scripts/editor.js"></script>

        <script src="/libs/three.js/build/three.min.js"></script>
        <script src="/libs/three.js/examples/js/libs/draco/draco_decoder.js"></script>
        <script src="/libs/three.js/examples/js/loaders/DRACOLoader.js"></script>
        <script src="/libs/three.js/examples/js/loaders/GLTFLoader.js"></script>
        <script src="/libs/three.js/examples/js/controls/OrbitControls.js"></script>
</head>

<body>
    <script>
        const PROJECT_DATA = JSON.parse('<%-projectData%>')
    </script>

    <div id="EditorContainer">
        <div id="ComponentsAdder" class="open">
            <div class="pd4-10 brdButton" data-title-open="Components"></div>
            <div id="ComponentsAdderComponentsContainer"></div>
        </div>
        <div id="EditorArea">
            <div id="Page" style="transition: transform 0.2s ease;">
                <div id="Viewport"></div>
            </div>
        </div>
        <div id="Timeline" class="open">
            <div id="TimelineHeader" class="pd4-10 flex brdButton" data-title-open="Animation Keyframe">
                <div>
                    <button id="PageScrollYEditorPlayPause" class="flex">
                        <img src="/images/play.svg" alt="playAndPause">
                    </button>
                </div>
                <div>
                    <button id="PageScrollYEditorPlayPause" class="flex">
                        <img src="/images/jumpToStart.svg" alt="playAndPause">
                    </button>
                </div>
            </div>
            <div id="PageScrollYEditor" class="flexColumn w10 brdRight ovau">
                <div id="PageScrollYEditorAnimatedComponents" class="pd4-10">
                    <div class="AnimationComponent cupo">Component 1</div>
                    <div class="AnimationComponent cupo">Component 2</div>
                    <div class="AnimationComponent cupo">Component 3</div>
                </div>

                <style>
                    /* عنوان و دکمه‌ها */
                    #PageScrollYEditorTitleAndDescription {
                        padding: 10px;
                        border-bottom: 1px solid #ddd;
                        display: flex;
                        align-items: center;
                        justify-content: space-between;
                    }

                    /* دکمه‌های کنترل */
                    #TimelineHeader button {
                        background: none;
                        border: none;
                        cursor: pointer;
                        padding: 5px;
                        border-radius: 4px;
                    }

                    #TimelineHeader button:hover {
                        background-color: #eee;
                    }

                    #TimelineHeader button img {
                        width: 16px;
                        height: 16px;
                    }

                    /* لیست کامپوننت‌های انیمیشن */
                    #PageScrollYEditorAnimatedComponents {
                        padding: 10px;
                        flex-grow: 1;
                        overflow-y: auto;
                    }

                    /* کامپوننت‌های انیمیشن */
                    #PageScrollYEditorAnimatedComponents .AnimationComponent {
                        padding: 5px;
                        margin: 3px 0;
                        background-color: #e9e9e9;
                        border-radius: 3px;
                        font-size: 12px;
                    }

                    /* بخش تایم‌لاین (سمت راست) */
                    #PageScrollYEditorTimeline {
                        flex-grow: 1;
                        background-color: #f9f9f9;
                        position: relative;
                        overflow: auto;
                    }

                    .timeline-ruler {
                        position: absolute;
                        top: 0;
                        left: 0;
                        right: 0;
                        height: 30px;
                        background-color: #f0f0f0;
                        border-bottom: 1px solid #ddd;
                        display: flex;
                        align-items: flex-end;
                        z-index: 5;
                    }

                    /* خطوط راهنمای تایم‌لاین در بخش اصلی */
                    .timeline-grid {
                        position: absolute;
                        top: 30px;
                        left: 0;
                        right: 0;
                        bottom: 0;
                        background: repeating-linear-gradient(to right,
                                #eee,
                                #eee 1px,
                                transparent 1px,
                                transparent calc(100% / var(--zoom-level, 10)));
                        transform-origin: 0 0;
                        transform: scaleX(var(--zoom-level, 1));
                        width: calc(100% / var(--zoom-level, 1));
                    }

                    /* نشانگر موقعیت فعلی */
                    .timeline-indicator {
                        position: absolute;
                        top: 0;
                        bottom: 0;
                        width: 2px;
                        background-color: red;
                        left: 0;
                        z-index: 10;
                    }

                    /* کیفریم‌های انیمیشن */
                    .keyframe {
                        position: absolute;
                        width: 10px;
                        height: 10px;
                        background-color: #4CAF50;
                        border-radius: 50%;
                        top: 50%;
                        transform: translateY(-50%);
                        z-index: 5;
                        cursor: pointer;
                    }
                </style>
                <div id="PageScrollYEditorTimeline">
                    <!-- خط‌کش با اعداد -->
                    <div class="timeline-ruler" id="timelineRuler"></div>

                    <!-- خطوط راهنمای تایم‌لاین -->
                    <div class="timeline-grid" id="timelineGrid"></div>

                    <!-- نشانگر موقعیت فعلی -->
                    <div class="timeline-indicator"></div>

                    <!-- کیفریم‌های نمونه -->
                    <div class="keyframe" style="left: 35%;"></div>
                    <div class="keyframe" style="left: 50%;"></div>
                    <div class="keyframe" style="left: 100%;"></div>
                </div>
            </div>
        </div>
        <div id="ComponentsTree" class="open">
            <div class="pd4-10 brdButton" data-title-open="Tree"></div>
        </div>
        <div id="ComponentsProperties" class="open">
            <div class="pd4-10 brdButton" data-title-open="Properties"></div>
        </div>
    </div>

    <div id="fileuploader" class="hidden">
        <form id="form_fileUploader" method="POST" action="/api/uploadFile/<%-projectId%>"
            enctype="multipart/form-data">
            <input type="file" name="projectFile">
        </form>
    </div>
</body>

</html>